# Telegram bot token
bot_token: "BOT_TOKEN_HERE"

# supported db types: json, sqlite
# both take a single argument which is the database file path
database: [sqlite, "secretlounge.sqlite"]

# salt used for obfuscating user IDs (optional)
# Needs to be a hexadecimal string, use e.g. `openssl rand -hex 6` to generate.
# It is recommended to set this. Reusing it between different bots is allowed.
#secret_salt: ""

# relay contacts
allow_contacts: false
# relay arbitrary documents/files (GIFs always work)
allow_documents: true

# allow mods to remove message without issuing a cooldown
allow_remove_command: false

# number of users required to vote /remove before a message is deleted
# set to 0 to disable user-initiated removes
user_remove_threshold: 3

# cooldown duration (in hours) for user-voted removals
# this is a fixed cooldown that doesn't follow the progressive warning system
# defaults to 24 hours if not specified
user_remove_cooldown_hours: 24

# cooldown interval (in seconds) between /remove command uses
# prevents abuse by limiting how often a user can vote to remove messages
# defaults to 600 seconds (10 minutes) if not specified, set to 0 to disable
user_remove_interval: 600

# number of /remove votes allowed before the cooldown interval applies
# allows users to vote on multiple messages before rate limiting kicks in
# defaults to 3 if not specified
user_remove_limit_count: 3

# global limit: maximum number of successful removals per day across all users
# prevents raid abuse where many users coordinate to remove content
# set to 0 to disable global limit, defaults to 5
user_remove_global_limit: 5
# time window for the global limit in hours, defaults to 24 (one day)
user_remove_global_window: 24

# when a message is removed via user votes, also remove neighboring messages
# from the same user to handle rapid-fire spam or abuse
# set to 0 to only remove the single reported message, defaults to 1
user_remove_consecutive_count: 3
# whether to remove consecutive messages (true) or just the reported message (false)
# when true, removes up to user_remove_consecutive_count messages before and after
# the reported message from the same user, defaults to true
user_remove_consecutive: true

# enable upvoting by reacting with thumbs-up to a message
message_reaction_upvote: true

# enable signing messages using /sign or /tsign as well as setting a tripcode
enable_signing: false
# limit usage of /sign to once in every interval (seconds)
# defaults to 600 if not specified, set to 0 to disable
#sign_limit_interval: 600

# custom message filter
# specify a Python file containing a filter function to control which messages are forwarded
# the file should define a function named 'message_filter' that takes (user, is_media, signed, tripcode)
# and returns True to allow or False to block the message
# see message_filter_example.py for examples
message_filter: "./message_filter.py"

# point of contact shown to blacklisted users (optional)
#blacklist_contact: http://t.me/invite/something

# duration (hours) during which new users can't send media or forwards (optional)
#media_limit_period: 3

# map of bots that users can refer to in their messages (optional)
# e.g. >>>/foo/ would be turned into an inline link to http://t.me/foochatbot
#linked_network:
#  foo: foochatbot
#  bar: barchatbot
# alternatively the map can also be loaded from another YAML file using this syntax
#linked_network: "./somewhere/bots.yml"

# Credit system configuration
# Enable or disable the credit system entirely (defaults to false)
#credits_enabled: false
# Starting credits for new users (defaults to 20)
#credits_starting: 20
# Messages needed to earn 1 credit (defaults to 20)
#credits_messages_per_credit: 20
# Media (images/videos) needed to earn 1 credit (defaults to 5)
#credits_media_per_credit: 5
# Number of upvotes/downvotes to earn/lose 1 credit (defaults to 5)
#credits_votes_per_credit: 5
# Cost in credits to cast a vote - upvote or downvote (defaults to 1)
#credits_vote_cost: 1
# Percentage of credits lost when message is deleted, 0-100 (defaults to 80)
#credits_deletion_tax_percent: 80
# Daily tax percentage on credits, 0-100 - base rate below ramp start (defaults to 0.5)
#credits_daily_tax_percent: 0.5
# Tax ramp: credits threshold where higher tax begins (defaults to 50)
#credits_daily_tax_ramp_start: 50
# Tax ramp: credits threshold where max tax applies (defaults to 150)
#credits_daily_tax_ramp_end: 150
# Tax ramp: maximum tax percentage at ramp end (defaults to 2.0)
#credits_daily_tax_ramp_max: 2.0
# Maximum credits a user can earn per day, 0 for unlimited (defaults to 20)
#credits_daily_earn_max: 20.0
# Duration of timeout when credits go negative, in hours (defaults to 24)
#credits_negative_timeout_hours: 24
